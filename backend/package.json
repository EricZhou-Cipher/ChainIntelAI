{
  "name": "chainintel-ai",
  "version": "1.0.0",
  "type": "module",
  "description": "ChainIntelAI - 区块链智能分析系统",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn tsc",
    "start": "node dist/index.js",
    "dev": "yarn ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "test:coverage": "yarn jest --coverage",
    "test:ci": "yarn jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "yarn eslint . --ext .ts",
    "lint:fix": "yarn eslint . --ext .ts --fix",
    "type-check": "yarn tsc --noEmit",
    "prepare": "yarn husky install"
  },
  "dependencies": {
    "@slack/web-api": "^6.8.1",
    "@types/ioredis": "^5.0.0",
    "axios": "^1.6.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.9.0",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.6.0",
    "mongoose": "^8.12.1",
    "prom-client": "^14.2.0",
    "redis": "^4.7.0",
    "ts-retry-promise": "^0.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.11",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.10.4",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 85,
        "branches": 80,
        "functions": 85,
        "lines": 85
      }
    }
  }
}
