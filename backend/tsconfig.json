{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types", "./types"],
    "allowJs": true,
    "checkJs": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "pipeline/**/*",
    "analyzer/**/*",
    "profiling/**/*",
    "config/**/*",
    "utils/**/*",
    "types/**/*",
    "notifier/**/*",
    "monitoring/**/*",
    "queue/**/*",
    "scheduler/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/*.js"]
}
